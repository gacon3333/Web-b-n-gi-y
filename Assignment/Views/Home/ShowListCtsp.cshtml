<h1>ShowListCtsp</h1>

<p>
    <a asp-action="AddCtsp">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Màu sắc
            </th>
            <th>
                Size
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th>
                Bảo hành
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Số lượng tồn
            </th>
